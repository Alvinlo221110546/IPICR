# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=db            # Ganti ke 'db' jika kamu pakai Docker service name
DB_PORT=3306
DB_USER=root
DB_PASS=              # Kosongkan kalau MySQL kamu tidak pakai password
DB_NAME=icr_pedigree

# Authentication
JWT_SECRET=change_this_jwt_secret_please
SECRET_KEY_BASE64=REPLACE_WITH_BASE64_32_BYTES_KEY
# Gunakan perintah ini untuk generate key baru:
# node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"

# Cookie & CORS
COOKIE_NAME=icr_token
CORS_ORIGIN=http://localhost:5173

# Email Configuration
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_app_password_here
